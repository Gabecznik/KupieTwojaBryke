generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                    Int      @id @default(autoincrement())
  brand                 String
  model                 String
  image                 String
  registrationNumber    String   @unique
  vin                   String   @unique
  mileage               Int
  price                 Int
  insuranceValidUntil   DateTime
  inspectionValidUntil  DateTime
  firstRegistrationDate DateTime
  vehicleType           String
  yearOfProduction      Int
  engineCapacity        String
  enginePower           String
  fuelType              String
  numberOfSeats         Int
  bodyType              String
  transmission          String
  numberOfDoors         Int
  notes                 String?
  purchaseDate          DateTime

  @@map("cars")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
}

